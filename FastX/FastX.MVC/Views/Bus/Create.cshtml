@model FastX.DAL.Models.Bus
@{
    ViewData["Title"] = "Add New Bus";
}

<h2 class="text-primary fw-bold">➕ Add New Bus</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Bus Number</label>
        <input asp-for="BusNumber" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Type</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Seat Count</label>
        <input asp-for="SeatCount" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Amenities</label>
        <input asp-for="Amenities" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
