@model FastX.DAL.Models.Bus
@{
    ViewData["Title"] = "Edit Bus";
}

<h2 class="text-primary fw-bold">✏️ Edit Bus</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Bus Number</label>
        <input asp-for="BusNumber" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Type</label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Seat Count</label>
        <input asp-for="SeatCount" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Amenities</label>
        <input asp-for="Amenities" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
