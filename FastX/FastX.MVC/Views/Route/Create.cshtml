@model FastX.DAL.Models.Route

@{
    ViewData["Title"] = "Create Route";
}

<h2>Create Route</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Origin</label>
        <input asp-for="Origin" class="form-control" />
    </div>
    <div class="form-group">
        <label>Destination</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <div class="form-group">
        <label>Departure Time</label>
        <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label>Arrival Time</label>
        <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fare</label>
        <input asp-for="Fare" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bus</label>
        <input asp-for="Destination" class="form-control" />
    </div>
    <a href="/Route/Index" class="btn btn-outline-primary w-100 py-3 shadow-sm">
        ➕ Add New Route
    </a>
</form>
