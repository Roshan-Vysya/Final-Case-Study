@model FastX.DAL.Models.Route

@{
    ViewData["Title"] = "Edit Route";
}

<h2 class="text-primary mb-4">✏️ Edit Route</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Origin" class="form-label">Origin</label>
        <input asp-for="Origin" class="form-control" />
        <span asp-validation-for="Origin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Destination" class="form-label">Destination</label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartureTime" class="form-label">Departure Time</label>
        <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ArrivalTime" class="form-label">Arrival Time</label>
        <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fare" class="form-label">Fare (₹)</label>
        <input asp-for="Fare" class="form-control" />
        <span asp-validation-for="Fare" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="BusId" class="form-label">Select Bus</label>
        <select asp-for="BusId" class="form-control" asp-items="ViewBag.BusList"></select>
        <span asp-validation-for="BusId" class="text-danger"></span>
    </div>

    <a href="/Route/Index" class="btn btn-outline-primary w-100 py-3 shadow-sm">
        Update Route
    </a>
</form>
