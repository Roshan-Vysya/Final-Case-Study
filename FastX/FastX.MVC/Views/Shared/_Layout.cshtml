<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - FastX</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #b22222;">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold fs-4" asp-controller="Admin" asp-action="Index">FastX</a>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" asp-controller="Admin" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" href="#">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-outline-light me-2" href="#">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Account/Login" class="btn btn-outline-primary w-100 py-3 shadow-sm">
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Body -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 mb-3 text-muted">
        <hr />
        &copy; 2025 FastX. <a href="#">Privacy Policy</a>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
